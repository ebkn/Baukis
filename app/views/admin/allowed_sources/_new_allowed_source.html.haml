= form_for ['admin', @new_allowed_source] do |f|
  .form-group.mt-2.text-center
    = f.label :octet1, '新規許可IPアドレス'
  
  .form-group.form-row.justify-content-center
    .form-group.col-1.mx-1
      = f.text_field :octet1, size: 3, class: 'form-control'
    .form-group.col-1.mx-1
      = f.text_field :octet2, size: 3, class: 'form-control'
    .form-group.col-1.mx-1
      = f.text_field :octet3, size: 3, class: 'form-control'
    .form-group.col-1.mx-1
      = f.text_field :octet4, size: 3, class: 'form-control'
    .form-group.col-1.mx-1
      = f.submit '追加', class: 'btn btn-raised btn-info'
  - @new_allowed_source.errors.full_messages_for(:octet4).each do |message|
    .form-group.text-center.mb-3
      .error-message= message
