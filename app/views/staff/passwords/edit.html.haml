- @title = 'パスワード変更'
= form_for @change_password_form, url: staff_password_path, method: :patch do |f|
  = markup do |m|
    - form_presenter = FormPresenter.new(f, self)
    - form_presenter.with_options(size: 32) do |option_form|
      :ruby
        m << option_form.password_field_block(:current_password, '現在のパスワード', placeholder: 'Your current password')
        m << option_form.password_field_block(:new_password, '新しいパスワード', placeholder: 'Your new password')
        m << option_form.password_field_block(:new_password_confirmation, '新しいパスワード(確認)', placeholder: 'Your new password')
  .row.my-4.px-3
    = link_to 'キャンセル', staff_account_path, class: 'col-2 mr-1 btn btn-raised btn-warning'
    = f.submit '変更', class: 'col-2 mr-1 btn btn-raised btn-info'
