- @title = '顧客詳細情報'

.table-wrapper
  %h4.text-center 基本情報
  - presenter = CustomerPresenter.new(@customer, self)
  %table.table.table-bordered.my-3
    %tr.text-center
      %th 氏名
      %td= presenter.full_name
    %tr.text-center
      %th フリガナ
      %td= presenter.full_name_kana
    %tr.text-center
      %th メールアドレス
      %td= @customer.email
    %tr.text-center
      %th 性別
      %td= presenter.gender
    %tr.text-center
      %th 登録日時
      %td= presenter.created_at
    %tr.text-center
      %th 更新日時
      %td= presenter.updated_at
    %tr.text-center
      %th 個人電話番号(1)
      %td= presenter.personal_phones[0]
    %tr.text-center
      %th 個人電話番号(2)
      %td= presenter.personal_phones[1]

  - if @customer.home_address
    - home_address = @customer.home_address
    - home_address_presenter = AddressPresenter.new(home_address, self)
    %h4.text-center 自宅住所
    %table.table.table-bordered.my-3
      %tr.text-center
        %th 郵便番号
        %td= home_address_presenter.postal_code
      %tr.text-center
        %th 都道府県
        %td= home_address.prefecture
      %tr.text-center
        %th 市区町村
        %td= home_address.city
      %tr.text-center
        %th 町域、番地等
        %td= home_address.address1
      %tr.text-center
        %th 建物名、部屋番号等
        %td= home_address.address2
      %tr.text-center
        %th 自宅電話番号(1)
        %td= home_address_presenter.phones[0]
      %tr.text-center
        %th 自宅電話番号(2)
        %td= home_address_presenter.phones[1]

  - if @customer.work_address
    - work_address = @customer.work_address
    - work_address_presenter = AddressPresenter.new(work_address, self)
    %h4.text-center 勤務先
    %table.table.table-bordered.my-3
      %tr.text-center
        %th 会社名
        %td= work_address.company_name
      %tr.text-center
        %th 部署名
        %td= work_address.division_name
      %tr.text-center
        %th 郵便番号
        %td= work_address_presenter.postal_code
      %tr.text-center
        %th 都道府県
        %td= work_address.prefecture
      %tr.text-center
        %th 市区町村
        %td= work_address.city
      %tr.text-center
        %th 町域、番地等
        %td= work_address.address1
      %tr.text-center
        %th 建物名、部屋番号等
        %td= work_address.address2
      %tr.text-center
        %th 勤務先電話番号(1)
        %td= work_address_presenter.phones[0]
      %tr.text-center
        %th 勤務先電話番号(2)
        %td= work_address_presenter.phones[1]
